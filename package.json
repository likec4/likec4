{
  "name": "likec4-workspaces",
  "version": "0.6.3",
  "private": true,
  "license": "MIT",
  "packageManager": "yarn@3.4.1",
  "workspaces": [
    "docs",
    "packages/*",
    "examples/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "compile": "turbo run compile --filter='./packages/*'",
    "build": "turbo run build --filter='./packages/*'",
    "build:release": "turbo run build:release",
    "release": "run compile && run clean && run build:release",
    "clean": "turbo run clean",
    "clean:after:publish": "rimraf --glob '**/package*.tgz' --interactive",
    "dev": "turbo run dev --filter='./packages/*'",
    "test": "turbo run test --filter='./packages/*'",
    "test:watch": "turbo run test:watch --filter='./packages/*'",
    "lint": "turbo run lint --continue --filter='./packages/*'",
    "vitest:ui": "vitest --ui"
  },
  "devDependencies": {
    "@types/eslint": "^8.37.0",
    "@types/node": "^18.15.11",
    "@types/prettier": "^2",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitest/ui": "^0.30.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "turbo": "^1.9.3",
    "typescript": "^5.0.4",
    "vite": "^4.2.2",
    "vitest": "^0.30.1"
  },
  "volta": {
    "node": "18.15.0"
  }
}
