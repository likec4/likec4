{
  "name": "@likec4/workspaces",
  "version": "1.2.2",
  "private": true,
  "license": "MIT",
  "packageManager": "yarn@4.3.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "scripts": {
    "fmt": "dprint fmt",
    "prepare": "husky install",
    "build": "turbo run build --filter='./packages/*'",
    "ci:build": "turbo run build --filter='./packages/*'",
    "typecheck": "turbo run typecheck",
    "vscode:typecheck": "turbo run typecheck --filter='./packages/*'",
    "ci:typecheck": "turbo run typecheck --filter='./packages/*'",
    "release": "shipjs prepare",
    "clean": "turbo run clean && rimraf -v -g '**/.tsbuildinfo' '**/.turbo' 'node_modules/.cache/turbo'",
    "clean:turbo": "rimraf -v -g '**/.turbo' 'node_modules/.cache/turbo'",
    "clean:tsbuildinfo": "rimraf -v -g '**/.tsbuildinfo'",
    "clean:vitetmp": "rimraf -v -g '**/vi*.config.ts.timestamp-*'",
    "clean:after:publish": "rimraf -v -g '**/package*.tgz'",
    "git:pre-commit": "lint-staged",
    "test": "vitest run --no-isolate",
    "ci:test": "vitest run --reporter=basic --reporter=github-actions --no-isolate",
    "test:watch": "vitest",
    "vitest:ui": "vitest --ui --no-isolate"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.24.7",
    "@types/node": "^20.14.2",
    "@vitest/ui": "~1.5.3",
    "dprint": "0.46.2",
    "esbuild": "^0.21.5",
    "execa": "^9.1.0",
    "global": "^4.4.0",
    "husky": "^8.0.3",
    "lint-staged": "15.2.6",
    "rimraf": "^5.0.5",
    "shipjs": "^0.26.3",
    "tsx": "~4.9.3",
    "turbo": "^2.0.3",
    "typescript": "^5.4.5",
    "vite": "5.3.0",
    "vitest": "~1.5.3",
    "wireit": "^0.14.4"
  },
  "resolutions": {
    "vscode-jsonrpc": "8.2.0",
    "vscode-languageclient": "9.0.1",
    "vscode-languageserver": "9.0.1",
    "vscode-languageserver-protocol": "3.17.5",
    "vscode-uri": "3.0.8"
  },
  "lint-staged": {
    "**/*.{ts,tsx,mjs,js,jsx}": [
      "dprint fmt"
    ]
  }
}
