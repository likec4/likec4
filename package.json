{
  "name": "@likec4/workspaces",
  "version": "0.44.1",
  "private": true,
  "license": "MIT",
  "packageManager": "yarn@4.0.1",
  "workspaces": [
    "docs",
    "packages/*",
    "integration/*",
    "examples/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build --filter='./packages/*'",
    "ci:build": "turbo run build --filter='./packages/*' --log-prefix=none --log-order=grouped",
    "typecheck": "turbo run typecheck",
    "release": "shipjs prepare",
    "clean": "turbo run clean && rimraf -v -g '**/*.tsbuildinfo' '**/.turbo' 'node_modules/.cache/turbo'",
    "clean:after:publish": "rimraf -v -g '**/package*.tgz'",
    "git:pre-commit": "lint-staged",
    "dev": "turbo run dev --filter='./packages/*'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "node integration/like4-cli-tests/run-suit.mjs",
    "lint": "turbo run lint --continue --filter='./packages/*'",
    "vitest:ui": "vitest --ui",
    "vs:tasks:build": "turbo run typecheck --log-prefix=none --log-order=grouped --filter='!docs-website'"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@types/eslint": "^8.44.6",
    "@types/node": "^20.8.7",
    "@types/prettier": "^2.7.3",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "@vitest/ui": "^0.34.7",
    "eslint": "^8.52.0",
    "execa": "^8.0.1",
    "global": "^4.4.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "shipjs": "^0.26.3",
    "tsx": "^3.14.0",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6",
    "vitest-github-actions-reporter": "^0.10.0"
  },
  "volta": {
    "node": "20.8.1"
  },
  "resolutions": {
    "vscode-jsonrpc": "8.1.0",
    "vscode-languageclient": "8.1.0",
    "vscode-languageserver": "8.1.0",
    "vscode-languageserver-protocol": "3.17.5",
    "chevrotain-allstar": "0.3.1"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "**/*.{md,mdx,yml,json,babelrc,eslintrc,prettierrc}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
