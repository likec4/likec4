{
  "typescript.tsdk": "./node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "eslint.enable": false,
  "oxc.enable": true,
  "oxc.typeAware": true,
  "oxc.lint.run": "onSave",
  "astro.content-intellisense": true,
  "[typescript]": {
    "editor.defaultFormatter": "dprint.dprint",
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "dprint.dprint",
  },
  "[javascript]": {
    "editor.defaultFormatter": "dprint.dprint",
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "dprint.dprint",
  },
  "[json]": {
    "editor.defaultFormatter": "dprint.dprint",
  },
  "[json5]": {
    "editor.defaultFormatter": "dprint.dprint",
  },
  "[markdown]": {
    "editor.defaultFormatter": "dprint.dprint",
  },
  "[mdx]": {
    "editor.defaultFormatter": "dprint.dprint",
    "files.trimTrailingWhitespace": false,
  },
  "[css]": {
    "editor.defaultFormatter": "dprint.dprint",
  },
  "files.readonlyInclude": {
    "**/routeTree.gen.ts": true,
    "**/worker-configuration.d.ts": true,
    "packages/icons/**/*.tsx": true,
    "**/__snapshots__/**": true,
    "packages/language-server/src/generated*/**": true,
  },
  "search.exclude": {
    ".yarn/**": true,
    "yarn.lock": true,
    "node_modules/**": true,
    "packages/*/dist/**": true,
    "packages/*/bundle/**": true,
    "**/routeTree.gen.ts": true
  },
  "files.exclude": {
    "**/*.tsbuildinfo": true,
    "**/.turbo": true,
    "**/.wireit": true,
    "**/.tanstack": true,
    "**/.wrangler": true,
    ".pnpm-store/**": true,
    "packages/likec4/__app__": true,
    "packages/*/.vscode-test-web": true,
    "packages/*/node_modules": true,
    "packages/*/styled-system": true,
    "packages/*/lib": true,
    "apps/*/lib": true,
    "apps/*/styled-system": true,
    "devops/lib": true,
    "styled-system/*/node_modules": true,
    "styled-system/*/lib": true
  },
  "json.schemas": [
    {
      "url": "./packages/language-server/node_modules/langium-cli/langium-config-schema.json",
      "fileMatch": [
        "langium-config.json"
      ]
    },
    {
      "url": "./.vscode/dprint-schema.json",
      "fileMatch": [
        "dprint.json"
      ]
    }
  ],
  "cSpell.words": [
    "clsx",
    "codegen",
    "execa",
    "gridify",
    "hookz",
    "khroma",
    "langium",
    "likec4",
    "mantine",
    "nodrag",
    "nonexhaustive",
    "nopan",
    "outfile",
    "pannable",
    "rawmodel",
    "reactflow",
    "remeda",
    "styleprops",
    "tanstack",
    "tilg",
    "typecheck",
    "webcola",
    "xyflow",
    "zoomable"
  ],
  "sonarlint.connectedMode.project": {
    "connectionId": "likec4",
    "projectKey": "likec4_likec4"
  },
  "references.preferredLocation": "peek"
}
