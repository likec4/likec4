{
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "prettier.enable": true,
  "npm.packageManager": "yarn",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "search.exclude": {
    "node_modules/**": true,
    "docs/.next/**": true,
    "docs/node_modules/**": true,
    "examples/*/dist/**": true,
    "packages/*/dist/**": true,
    "packages/*/node_modules/**": true
  },
  "files.exclude": {
    "**/.turbo": true,
    "packages/*/.vscode-test-web": true
  },
  "exportall.config.folderListener": [
    "packages/core/src/model"
  ],
  "mdx.experimentalLanguageServer": true,
  "vitest.commandLine": "yarn vitest",
  "exportall.config.semis": false,
  "json.schemas": [
    {
      "url": "node_modules/langium-cli/langium-config-schema.json",
      "fileMatch": ["langium-config.json"]
    }
  ]
}
