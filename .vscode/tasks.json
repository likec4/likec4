{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "typecheck",
      "type": "npm",
      "script": "vscode:typecheck",
      "problemMatcher": [
        "$tsc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "env": {
          "TURBO_UI": "0"
        }
      },
      "promptOnClose": false,
      "presentation": {
        "echo": false,
        "showReuseMessage": false,
        "reveal": "always",
        "group": "build",
        "clear": true,
      }
    },
    {
      "label": "build_extension",
      "type": "shell",
      "command": "pnpm turbo run build --log-order=grouped --filter='likec4-vscode' --filter='@likec4/vscode-preview' --filter='!@likec4/language-server' --filter='!@likec4/diagram'",
      "options": {
        "cwd": "${workspaceFolder}/packages/vscode",
        "env": {
          "NODE_ENV": "development",
        }
      },
    }
  ]
}
