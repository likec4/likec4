{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "typecheck",
      "type": "npm",
      "script": "vscode:typecheck",
      "problemMatcher": [
        "$tsc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "env": {
          "TURBO_UI": "0"
        }
      },
      "promptOnClose": false,
      "presentation": {
        "echo": false,
        "showReuseMessage": false,
        "reveal": "always",
        "group": "build",
        "clear": true,
      }
    },
  ]
}
