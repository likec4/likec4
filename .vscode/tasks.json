{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tsc: build",
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "problemMatcher": [
        "$tsc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
    },
    {
      "label": "ts: watch",
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "problemMatcher": [
        "$tsc-watch"
      ],
      "group": "build"
    },
    {
      "label": "typecheck",
      "type": "npm",
      "script": "vscode:typecheck",
      "problemMatcher": [
        "$tsc"
      ],
      "options": {
        "env": {
          "NODE_ENV": "development"
        }
      },
      "promptOnClose": false,
      "presentation": {
        "echo": false,
        "showReuseMessage": false,
        "reveal": "always",
        "group": "build",
        "clear": true,
      }
    },
    {
      "label": "build_extension",
      "type": "shell",
      "command": "pnpm turbo run build --filter='likec4-vscode'",
      "options": {
        "cwd": "${workspaceFolder}/packages/vscode",
        "env": {
          "NODE_ENV": "development",
        }
      },
    }
  ]
}
