// A launch configuration that launches the extension inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "name": "Launch Playground",
      "request": "launch",
      "url": "http://localhost:5173",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode",
        "${workspaceFolder}/examples/cloud-system",
      ],
      "outFiles": [
        "${workspaceFolder}/packages/vscode/dist/**/*.js",
      ],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/packages/**",
        "!**/node_modules/**"
      ],
      "autoAttachChildProcesses": true,
      "preLaunchTask": {
        "type": "npm",
        "script": "build:turbo",
        "path": "packages/vscode"
      }
    },
    {
      "name": "Attach to Extension",
      "port": 9229,
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "name": "Run Web Extension in VS Code",
      "type": "extensionHost",
      "debugWebWorkerHost": true,
      "request": "launch",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode",
        "--extensionDevelopmentKind=web",
        "${workspaceFolder}/examples/diagrams-dev/likec4",
      ],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/packages/**",
        "!${workspaceFolder}/packages/*/dist/",
        "!**/node_modules/**"
      ],
      "autoAttachChildProcesses": true,
      "preLaunchTask": {
        "type": "npm",
        "script": "build:turbo",
        "path": "packages/vscode"
      }
    }
  ]
}
