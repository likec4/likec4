{
  "$schema": "https://turbo.build/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "generate": {
      "dependsOn": [
        "@likec4/style-preset#build"
      ],
      "outputs": [
        "dist/**",
        "!dist/preset.mjs",
        "!dist/preset.d.mts"
      ]
    },
    "typecheck": {
      "dependsOn": [
        "generate"
      ],
      "outputs": [
        "lib/**",
        "*.tsbuildinfo"
      ],
      "outputLogs": "new-only"
    },
    "build": {
      "dependsOn": [
        "generate"
      ],
      "outputs": [
        "dist/preset.d.mts",
        "dist/preset.mjs"
      ]
    }
  }
}
