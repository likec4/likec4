{
  "name": "@likec4/style-preset",
  "description": "Shared PandaCSS preset used in LikeC4",
  "license": "MIT",
  "version": "1.44.0",
  "bugs": "https://github.com/likec4/likec4/issues",
  "homepage": "https://likec4.dev",
  "author": "Denis Davydkov <denis@davydkov.com>",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "generate": "pnpm tsx --conditions=sources ./generate.ts",
    "typecheck": "tsc --build --verbose",
    "build": "unbuild",
    "pack": "pnpm pack",
    "postpack": "cp likec4-style-preset-$npm_package_version.tgz package.tgz || true",
    "lint:package": "pnpx publint ./package.tgz",
    "clean": "likec4ops clean"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public",
    "types": "dist/index.d.mts",
    "module": "dist/index.mjs"
  },
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "sources": "./src/index.ts",
      "default": {
        "types": "./dist/index.d.mts",
        "import": "./dist/index.mjs",
        "default": "./dist/index.mjs"
      }
    },
    "./src": "./src/index.ts"
  },
  "peerDependencies": {
    "@pandacss/dev": "catalog:css",
    "@pandacss/types": "catalog:css"
  },
  "devDependencies": {
    "@types/react": "catalog:react",
    "@types/react-dom": "catalog:react",
    "@radix-ui/colors": "^3.0.0",
    "pandacss-preset-radix-colors": "^0.2.0",
    "@likec4/core": "workspace:*",
    "@likec4/devops": "workspace:*",
    "@likec4/tsconfig": "workspace:*",
    "@mantine/core": "catalog:mantine",
    "@mantine/vanilla-extract": "catalog:mantine",
    "@pandacss/dev": "catalog:css",
    "khroma": "catalog:utils",
    "json5": "catalog:utils",
    "remeda": "catalog:utils",
    "typescript": "catalog:",
    "unbuild": "catalog:"
  }
}
