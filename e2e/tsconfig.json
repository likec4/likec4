{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": ["src", "bootstrap.mjs", "playwright.config.ts"],
  "exclude": ["**/node_modules/**"]
}
