{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "es2022",
    "target": "es2022",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "checkJs": false,
    "types": [""]
  },
  "exclude": ["node_modules", "packages/*/dist"]
}
