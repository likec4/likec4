{
  "$schema": "https://turbo.build/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "generate": {
      "dependsOn": [
        "likec4#build"
      ],
      "outputs": [
        "components/**/generated.tsx"
      ],
      "inputs": [
        "likec4/**"
      ]
    },
    "typecheck": {
      "dependsOn": [
        "generate",
        "^build"
      ],
      "outputLogs": "errors-only"
    },
    "build": {
      "dependsOn": [
        "generate",
        "^build"
      ],
      "outputs": [
        ".next/**",
        "out/**",
        "!.next/cache/**"
      ]
    }
  }
}
