{
  "name": "likec4",
  "scopeName": "source.likec4",
  "fileTypes": [
    ".c4",
    ".likec4",
    ".like-c4"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.likec4",
      "match": "\\b(specification|model|views)\\b"
    },
    {
      "match": "\\b(element|tag)\\s+([^\\W]+)\\b",
      "captures": {
        "1": {
          "name": "keyword.control.likec4"
        },
        "2": {
          "name": "entity.name.type.likec4"
        }
      }
    },
    {
      "match": "\\b(include|exclude)\\s+(element\\.kind|element\\.tag)\\s*(!=|=)\\s*([a-zA-Z#][_\\*\\.\\w]*)\\b",
      "captures": {
        "1": {
          "name": "keyword.control.likec4"
        },
        "2": {
          "name": "keyword.control.likec4"
        },
        "3": {
          "name": "storage.type.function.likec4"
        },
        "4": {
          "name": "variable.other.constant.likec4"
        }
      }
    },
    {
      "match": "\\b(actor|component|service|include|exclude|extend)\\s+([a-zA-Z][_\\*\\.\\w]*)\\b",
      "captures": {
        "1": {
          "name": "keyword.control.likec4"
        },
        "2": {
          "name": "variable.other.constant.likec4"
        }
      }
    },
    {
      "name": "keyword.control.likec4",
      "match": "\\b(include|exclude)\\b"
    },
    {
      "match": "\\b(shape|color):?\\s+([^\\W]+)\\b",
      "captures": {
        "1": {
          "name": "keyword.control.likec4"
        },
        "2": {
          "name": "support.constant.likec4"
        }
      }
    },
     {
      "match": "\\b([^\\W]+)\\s*(=)\\s*([^\\W]+)\\b",
      "captures": {
        "1": {
          "name": "variable.other.constant.likec4"
        },
        "2": {
          "name": "keyword.operator.likec4"
        },
        "3": {
          "name": "keyword.control.likec4"
        }
      }
    },{
      "match": "\\b(view)\\s+([^\\W]+)\\s+(of)\\s+([a-zA-Z][_\\.\\w]*)\\b",
      "captures": {
        "1": {
          "name": "keyword.control.likec4"
        },
        "2": {
          "name": "variable.other.constant.likec4"
        },
        "3": {
          "name": "keyword.control.likec4"
        },
        "4": {
          "name": "variable.other.constant.likec4"
        }
      }
    },
    {
      "match": "\\b(view)\\s+(of)\\s+([a-zA-Z][_\\.\\w]*)\\b",
      "captures": {
        "1": {
          "name": "keyword.control.likec4"
        },
        "2": {
          "name": "keyword.control.likec4"
        },
        "3": {
          "name": "variable.other.constant.likec4"
        }
      }
    },
        {
      "match": "\\b(view)\\s+([_\\.\\w]*)\\b",
      "captures": {
        "1": {
          "name": "keyword.control.likec4"
        },
        "2": {
          "name": "variable.other.constant.likec4"
        }
      }
    },
    {
      "match": "\\b(it|this)\\s+(->)\\s+([^\\W]+)\\b",
      "captures": {
        "1": {
          "name": "keyword.control.likec4"
        },
        "2": {
          "name": "storage.type.function.likec4"
        },
        "3": {
          "name": "variable.other.constant.likec4"
        }
      }
    },
    {
      "match": "\\b([a-zA-Z][_\\.\\w]*)\\s+(->)\\s+([a-zA-Z][_\\.\\w]*)\\b",
      "captures": {
        "1": {
          "name": "variable.other.constant.likec4"
        },
        "2": {
          "name": "storage.type.function.likec4"
        },
        "3": {
          "name": "variable.other.constant.likec4"
        }
      }
    },
    {
      "match": "\\s+(->)\\s+([a-zA-Z][_\\.\\w]*)\\b",
      "captures": {
        "1": {
          "name": "storage.type.function.likec4"
        },
        "2": {
          "name": "variable.other.constant.likec4"
        }
      }
    },
    {
			"name": "storage.type.function.likec4",
			"match": "->"
		},
    {
      "name": "keyword.control.likec4",
      "match": "\\b(BottomTop|LeftRight|RightLeft|TopBottom|autoLayout|browser|mobile|actor|color|cylinder|description|element|exclude|extend|include|it|model|muted|of|person|primary|queue|rectangle|secondary|shape|specification|storage|style|tag|technology|this|title|view|views)\\b"
    },
    {
      "name": "variable.other.constant.likec4",
      "match": "\\b(customer|bigbank|singlePageApplication|mobileApp|apiApplication|mainframe|email|internetBankingSystem)\\b"
    },
    {
      "name": "string.quoted.double.likec4",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    },
    {
      "name": "string.quoted.single.likec4",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.likec4",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.likec4"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.likec4"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.likec4"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.likec4"
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.likec4",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}
