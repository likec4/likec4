{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@likec4/tsconfig/base.json",
  "compilerOptions": {
    "customConditions": [
      "sources"
    ],
    "composite": true,
    "incremental": true,
    "lib": [
      "ES2024",
    ],
    "target": "ES2024",
    "rootDirs": [
      "src",
      "."
    ],
    "types": [
      "node"
    ],
    "paths": {
      "likec4/vite-plugin/internal": [
        "./src/internal.ts"
      ],
      "likec4/model": [
        "../core/src/index.ts"
      ],
      "likec4/react": [
        "../react/dist/"
      ]
    }
  },
  "include": [
    "src",
    "build.config.ts",
    "package.json"
  ],
  "references": [
    {
      "path": "../core/tsconfig.json"
    },
    {
      "path": "../config/tsconfig.json"
    },
    {
      "path": "../language-server/tsconfig.json"
    },
    {
      "path": "../language-services/tsconfig.json"
    },
    {
      "path": "../layouts/tsconfig.json"
    },
    {
      "path": "../generators/tsconfig.json"
    },
    {
      "path": "../log/tsconfig.json"
    }
  ]
}
