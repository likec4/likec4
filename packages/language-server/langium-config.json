{
  "projectName": "LikeC4",
  "importExtension": "",
  "langiumInternal": false,
  "languages": [
    {
      "id": "likec4",
      "grammar": "src/like-c4.langium",
      "fileExtensions": [".c4", ".likec4", ".like-c4"],
      "textMate": {
        "out": "contrib/likec4.tmLanguage.json"
      },
      "monarch": {
        "out": "contrib/likec4.monarch.ts"
      },
      "railroad": {
        "out": "contrib/likec4.railroad.html"
      }
    }
  ],
  "out": "src/generated",
  "mode": "production",
  "chevrotainParserConfig": {
    "dynamicTokensEnabled": true,
    "recoveryEnabled": true,
    "skipValidations": true,
    "nodeLocationTracking": "full"
  }
}
