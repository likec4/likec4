{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@likec4/tsconfig/base.json",
  "compilerOptions": {
    "customConditions": [
      "sources"
    ],
    "composite": true,
    "incremental": true,
    "lib": [
      "ES2024",
      "WebWorker"
    ],
    "target": "ES2024",
    "rootDirs": [
      "src",
      "."
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src",
    "build.config.ts",
    "package.json"
  ],
  "references": [
    {
      "path": "../core/tsconfig.json"
    },
    {
      "path": "../config/tsconfig.json"
    },
    {
      "path": "../layouts/tsconfig.json"
    },
    {
      "path": "../log/tsconfig.json"
    }
  ]
}
