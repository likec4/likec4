{
  "extends": "../tsconfig/base.json",
  "compilerOptions": {
    "verbatimModuleSyntax": false,
    "importsNotUsedAsValues": "preserve",
    "outDir": "dist",
    "ignoreDeprecations": "5.0",
    "rootDir": "src",
    "sourceMap": true,
    "composite": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": [
    "./node_modules/**",
    "../../node_modules/**"
  ],
  "references": [
    { "path": "../core" },
  ]
}
