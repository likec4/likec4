{
  "$schema": "https://turbo.build/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "generate": {
      "outputs": [
        "contrib/**",
        "src/generated/**"
      ],
      "inputs": [
        "src/**/*.langium",
        "langium-config.json",
        "package.json"
      ],
      "outputLogs": "errors-only"
    },
    "typecheck": {
      "dependsOn": [
        "generate",
        "topo"
      ],
      "outputLogs": "errors-only"
    },
    "build": {
      "dependsOn": [
        "generate",
        "^build"
      ],
      "outputs": [
        "dist/**"
      ],
      "outputLogs": "new-only"
    }
  }
}
