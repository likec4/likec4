{
  "$schema": "https://turbo.build/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "generate": {
      "dependsOn": [
        "@likec4/icons#generate"
      ],
      "inputs": [
        "scripts/**",
        "src/**/*.langium",
        "langium-config.json",
        "package.json"
      ],
      "outputs": [
        "contrib/**",
        "src/generated/**",
        "src/generated-lib/**"
      ],
      "outputLogs": "new-only"
    },
    "build": {
      "dependsOn": [
        "^generate",
        "generate",
        "@likec4/core#build",
        "@likec4/config#build",
        "@likec4/layouts#build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!**/*.spec.ts",
        "!**/*.test-d.ts",
        "!**/__tests__/**",
        "!**/__snapshots__/**",
        "!**/__fixtures__/**"
      ],
      "outputs": [
        "dist/**"
      ],
      "outputLogs": "new-only"
    }
  }
}
