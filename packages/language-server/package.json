{
  "name": "@likec4/language-server",
  "description": "LikeC4 Language Server",
  "version": "1.7.4",
  "license": "MIT",
  "bugs": "https://github.com/likec4/likec4/issues",
  "homepage": "https://likec4.dev",
  "author": "Denis Davydkov <denis@davydkov.com>",
  "files": [
    "dist",
    "contrib",
    "src",
    "!**/__mocks__/",
    "!**/__tests__/",
    "!**/*.spec.*",
    "!**/*.map"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/likec4/likec4.git",
    "directory": "packages/language-server"
  },
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./likec4lib": "./src/likec4lib.ts",
    "./browser": "./src/browser.ts",
    "./protocol": "./src/protocol.ts",
    "./node": "./src/node.ts",
    "./model-graph": "./src/model-graph/index.ts"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./likec4lib": {
        "types": "./dist/likec4lib.d.ts",
        "default": "./dist/likec4lib.js"
      },
      "./browser": {
        "types": "./dist/browser.d.ts",
        "default": "./dist/browser.js"
      },
      "./protocol": {
        "types": "./dist/protocol.d.ts",
        "default": "./dist/protocol.js"
      },
      "./node": {
        "types": "./dist/node.d.ts",
        "default": "./dist/node.js"
      },
      "./model-graph": {
        "types": "./dist/model-graph/index.d.ts",
        "default": "./dist/model-graph/index.js"
      }
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "pregenerate": "rm -f src/generated/*",
    "watch:langium": "langium generate --watch",
    "watch:ts": "tsc --watch",
    "generate": "langium generate && tsx scripts/generate-icons.ts",
    "dev": "run-p 'watch:*'",
    "lint": "run -T eslint src/ --fix",
    "clean": "run -T rimraf dist contrib",
    "test": "vitest run --no-isolate",
    "vitest:ui": "vitest --no-isolate --ui",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@dagrejs/graphlib": "^2.2.3",
    "@likec4/core": "workspace:*",
    "@likec4/log": "workspace:*",
    "@msgpack/msgpack": "^3.0.0-beta2",
    "@smithy/util-base64": "^3.0.0",
    "@total-typescript/ts-reset": "^0.5.1",
    "fast-equals": "^5.0.1",
    "indent-string": "^5.0.0",
    "json5": "^2.2.3",
    "langium": "3.1.3",
    "object-hash": "^3.0.0",
    "p-debounce": "^4.0.0",
    "remeda": "^2.3.0",
    "string-hash": "^1.1.3",
    "strip-indent": "^4.0.0",
    "type-fest": "^4.21.0",
    "ufo": "^1.5.4",
    "vscode-jsonrpc": "8.2.0",
    "vscode-languageserver": "9.0.1",
    "vscode-languageserver-types": "3.17.5",
    "vscode-uri": "3.0.8"
  },
  "devDependencies": {
    "@likec4/icons": "workspace:*",
    "@likec4/tsconfig": "workspace:*",
    "@types/node": "^20.16.1",
    "@types/object-hash": "^3.0.6",
    "@types/string-hash": "^1.1.3",
    "execa": "^9.3.0",
    "glob": "^11.0.0",
    "langium-cli": "3.1.1",
    "npm-run-all2": "^6.2.2",
    "tsx": "~4.9.3",
    "typescript": "^5.5.4",
    "vitest": "~2.0.5"
  },
  "packageManager": "yarn@4.3.1"
}
