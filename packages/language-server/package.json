{
  "name": "@likec4/language-server",
  "description": "LikeC4 Language Server",
  "version": "0.7.0",
  "license": "MIT",
  "bugs": "https://github.com/likec4/likec4/issues",
  "homepage": "https://like-c4.dev",
  "author": "Denis Davydkov <denis@davydkov.com>",
  "files": [
    "dist",
    "contrib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/likec4/likec4.git",
    "directory": "packages/language-server"
  },
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./builtin": "./src/builtin.ts",
    "./protocol": "./src/protocol.ts"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "require": "./dist/index.js"
      },
      "./builtin": {
        "types": "./dist/builtin.d.ts",
        "import": "./dist/builtin.js",
        "require": "./dist/builtin.js"
      },
      "./protocol": {
        "types": "./dist/protocol.d.ts",
        "import": "./dist/protocol.js",
        "require": "./dist/protocol.js"
      }
    }
  },
  "scripts": {
    "turbo-build": "run -T turbo run build --filter='language-server...'",
    "compile": "tsc --noEmit",
    "build:esm": "tsc -p tsconfig.esm.json",
    "watch:langium": "langium generate --watch",
    "watch:ts": "tsc -p tsconfig.esm.json --watch",
    "generate": "langium generate",
    "build": "run build:esm",
    "dev": "run-p 'watch:*'",
    "lint": "run -T eslint src/ --fix",
    "clean": "run -T rimraf dist contrib",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@likec4/core": "workspace:*",
    "@mobily/ts-belt": "^3.13.1",
    "nanoid": "^4.0.2",
    "object-hash": "^3.0.0",
    "rambdax": "^9.1.0",
    "strip-indent": "^4.0.0",
    "tiny-invariant": "^1.3.1",
    "type-fest": "^3.8.0",
    "vscode-uri": "~3.0.7"
  },
  "peerDependencies": {
    "langium": "^1.1.0",
    "vscode-languageserver-protocol": "~3.17.2"
  },
  "peerDependenciesMeta": {
    "vscode-languageserver-protocol": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@types/object-hash": "^3.0.2",
    "langium-cli": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.0.4",
    "vite": "^4.2.2",
    "vitest": "^0.30.1"
  }
}
