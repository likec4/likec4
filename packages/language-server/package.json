{
  "name": "@likec4/language-server",
  "description": "LikeC4 Language Server",
  "version": "0.28.3",
  "license": "MIT",
  "bugs": "https://github.com/likec4/likec4/issues",
  "homepage": "https://likec4.dev",
  "author": "Denis Davydkov <denis@davydkov.com>",
  "files": [
    "dist",
    "contrib",
    "!**/__mocks__/",
    "!**/__test__/",
    "!**/*.spec.*",
    "!**/*.map"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/likec4/likec4.git",
    "directory": "packages/language-server"
  },
  "type": "module",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "require": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "turbo-build": "run -T turbo run build --filter='language-server'",
    "turbo-compile": "run -T turbo run compile --filter='language-server'",
    "compile": "tsc --noEmit",
    "watch:langium": "langium generate --watch",
    "watch:ts": "tsc --watch",
    "generate": "langium generate",
    "build": "tsc",
    "dev": "run-p 'watch:*'",
    "lint": "run -T eslint src/ --fix",
    "clean": "run -T rimraf dist contrib",
    "test": "run -T vitest run",
    "test:watch": "run -T vitest"
  },
  "dependencies": {
    "@likec4/core": "workspace:*",
    "langium": "^1.2.1",
    "nanoid": "^4.0.2",
    "object-hash": "^3.0.0",
    "rambdax": "^9.1.1",
    "remeda": "^1.23.0",
    "strip-indent": "^4.0.0",
    "tiny-invariant": "^1.3.1",
    "vscode-languageserver": "~8.1.0",
    "vscode-languageserver-protocol": "~3.17.3"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@types/object-hash": "^3.0.2",
    "langium-cli": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.1.6"
  }
}
