{
  "name": "@likec4/language-server",
  "description": "LikeC4 Language Server",
  "version": "1.19.0",
  "license": "MIT",
  "bugs": "https://github.com/likec4/likec4/issues",
  "homepage": "https://likec4.dev",
  "author": "Denis Davydkov <denis@davydkov.com>",
  "files": [
    "dist",
    "contrib",
    "src",
    "!**/__mocks__/",
    "!**/__tests__/",
    "!**/*.spec.*",
    "!**/*.map"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/likec4/likec4.git",
    "directory": "packages/language-server"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "node": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "default": "./dist/index.js"
      },
      "default": {
        "types": "./dist/browser.d.ts",
        "import": "./dist/browser.js",
        "default": "./dist/browser.js"
      }
    },
    "./likec4lib": {
      "development": "./src/likec4lib.ts",
      "default": {
        "types": "./dist/likec4lib.d.ts",
        "import": "./dist/likec4lib.js",
        "default": "./dist/likec4lib.js"
      }
    },
    "./browser": {
      "development": "./src/browser.ts",
      "default": {
        "types": "./dist/browser.d.ts",
        "import": "./dist/browser.js",
        "default": "./dist/browser.js"
      }
    },
    "./protocol": {
      "development": "./src/protocol.ts",
      "default": {
        "types": "./dist/protocol.d.ts",
        "import": "./dist/protocol.js",
        "default": "./dist/protocol.js"
      }
    }
  },
  "publishConfig": {
    "registry": "https://registry.npjs.org",
    "access": "public"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "prepack": "turbo run build",
    "build": "unbuild",
    "pregenerate": "rm -f src/generated/*",
    "watch:langium": "langium generate --watch",
    "watch:ts": "tsc --watch",
    "generate": "langium generate && tsx scripts/generate-icons.ts",
    "dev": "run-p 'watch:*'",
    "lint": "run -T eslint src/ --fix",
    "clean": "rm -r -f dist contrib",
    "test": "vitest run --no-isolate",
    "test-dbg": "vitest run --no-isolate -t formating",
    "vitest:ui": "vitest --no-isolate --ui",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@likec4/core": "workspace:*",
    "@likec4/log": "workspace:*",
    "@msgpack/msgpack": "^3.0.0-beta2",
    "@smithy/util-base64": "^3.0.0",
    "esm-env": "^1.2.1",
    "fast-equals": "^5.0.1",
    "fdir": "^6.4.2",
    "indent-string": "^5.0.0",
    "json5": "^2.2.3",
    "langium": "3.3.0",
    "p-debounce": "^4.0.0",
    "remeda": "^2.17.4",
    "strip-indent": "^4.0.0",
    "type-fest": "4.28.1",
    "ufo": "^1.5.4",
    "vscode-jsonrpc": "8.2.0",
    "vscode-languageserver": "9.0.1",
    "vscode-languageserver-types": "3.17.5",
    "vscode-uri": "3.0.8"
  },
  "devDependencies": {
    "@likec4/icons": "workspace:*",
    "@likec4/tsconfig": "workspace:*",
    "@types/node": "^20.17.7",
    "@vitest/coverage-v8": "^2.1.8",
    "execa": "^9.3.1",
    "langium-cli": "3.3.0",
    "natural-compare-lite": "^1.4.0",
    "npm-run-all2": "^7.0.1",
    "tsx": "~4.19.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "unbuild": "^3.1.0",
    "vitest": "^2.1.8"
  },
  "packageManager": "yarn@4.5.3"
}
