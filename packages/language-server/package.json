{
  "name": "@likec4/language-server",
  "description": "LikeC4 Language Server",
  "version": "0.40.0",
  "license": "MIT",
  "bugs": "https://github.com/likec4/likec4/issues",
  "homepage": "https://likec4.dev",
  "author": "Denis Davydkov <denis@davydkov.com>",
  "files": [
    "dist",
    "contrib",
    "!**/__mocks__/",
    "!**/__test__/",
    "!**/*.spec.*",
    "!**/*.map"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/likec4/likec4.git",
    "directory": "packages/language-server"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "scripts": {
    "typecheck:turbo": "run -T turbo run typecheck --filter='language-server'",
    "typecheck": "tsc --emitDeclarationOnly",
    "watch:langium": "langium generate --watch",
    "watch:ts": "tsc --watch",
    "generate": "langium generate",
    "prepack": "run clean && run build",
    "build:watch": "run-p 'watch:*'",
    "build:turbo": "run -T turbo run build --filter='language-server'",
    "build": "unbuild",
    "dev": "run-p 'watch:*'",
    "lint": "run -T eslint src/ --fix",
    "clean": "run -T rimraf dist contrib",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@likec4/core": "workspace:*",
    "langium": "^2.0.2",
    "object-hash": "^3.0.0",
    "p-debounce": "^4.0.0",
    "p-throttle": "^5.1.0",
    "rambdax": "^9.1.1",
    "remeda": "^1.27.0",
    "strip-indent": "^4.0.0",
    "vscode-languageserver": "~8.1.0",
    "vscode-languageserver-protocol": "~3.17.3",
    "vscode-uri": "~3.0.7"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@types/object-hash": "^3.0.4",
    "langium-cli": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0",
    "vitest": "^0.34.6"
  },
  "packageManager": "yarn@3.6.3"
}
