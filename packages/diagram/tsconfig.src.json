{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@likec4/tsconfig/react-lib.json",
  "compilerOptions": {
    "tsBuildInfoFile": "lib/.tsbuildinfo",
    "customConditions": [
      "sources"
    ],
    "composite": true,
    "rootDir": "src",
    "types": [
      "vite/client",
    ],
  },
  "include": [
    "src",
    "src/**/*.json"
  ],
  "exclude": [
    "src/bundle/react-dom-server-mock.ts"
  ],
  "references": [
    {
      "path": "../core/tsconfig.json"
    },
    {
      "path": "../../styled-system/styles/tsconfig.json"
    }
  ]
}
