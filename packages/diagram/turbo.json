{
  "$schema": "https://turbo.build/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "typecheck": {
      "dependsOn": [
        "@likec4/styles#generate",
        "@likec4/core#typecheck",
        "topo"
      ],
      "outputs": [
        "lib/**"
      ],
      "outputLogs": "new-only"
    },
    "build:dist": {
      "dependsOn": [
        "@likec4/core#build",
        "@likec4/styles#build"
      ],
      "outputs": [
        "dist/**",
        "panda.buildinfo.json"
      ],
      "outputLogs": "new-only"
    },
    "build:bundle": {
      "dependsOn": [
        "@likec4/core#build",
        "@likec4/styles#build"
      ],
      "outputs": [
        "bundle/**"
      ],
      "outputLogs": "new-only"
    },
    "build": {
      "dependsOn": [
        "build:dist",
        "build:bundle"
      ],
      "outputs": [],
      "outputLogs": "new-only"
    }
  }
}
