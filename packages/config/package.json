{
  "name": "@likec4/config",
  "version": "1.49.0",
  "license": "MIT",
  "homepage": "https://likec4.dev",
  "author": "Denis Davydkov <denis@davydkov.com>",
  "description": "A configuration package for LikeC4.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/likec4/likec4.git",
    "directory": "packages/config"
  },
  "bugs": "https://github.com/likec4/likec4/issues",
  "scripts": {
    "generate": "tsx --conditions=sources scripts/generate.mts",
    "typecheck": "tsc -b --verbose",
    "build": "obuild",
    "lint:package": "pnpx publint ./package.tgz",
    "clean": "likec4ops clean",
    "prepack": "likec4ops prepack",
    "pack": "pnpm pack",
    "postpack": "likec4ops postpack"
  },
  "files": [
    "dist",
    "src",
    "schema.json",
    "**/package.json",
    "!**/*.spec.ts",
    "!**/*.test-d.ts",
    "!**/__*/*",
    "!**/*.map"
  ],
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "sources": "./src/index.ts",
      "node": {
        "sources": "./src/node/index.ts",
        "default": {
          "types": "./dist/node/index.d.mts",
          "default": "./dist/node/index.mjs"
        }
      },
      "default": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    },
    "./node": {
      "sources": "./src/node/index.ts",
      "default": {
        "types": "./dist/node/index.d.mts",
        "default": "./dist/node/index.mjs"
      }
    },
    "./package.json": "./package.json",
    "./schema.json": "./schema.json"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public",
    "types": "dist/index.d.mts",
    "module": "dist/index.mjs"
  },
  "dependencies": {
    "@likec4/core": "workspace:*",
    "@likec4/log": "workspace:*",
    "json5": "catalog:utils",
    "zod": "catalog:externals",
    "type-fest": "catalog:externals"
  },
  "peerDependencies": {
    "bundle-require": "catalog:externals",
    "esbuild": "catalog:esbuild"
  },
  "peerDependenciesMeta": {
    "esbuild": {
      "optional": true
    },
    "bundle-require": {
      "optional": true
    }
  },
  "devDependencies": {
    "@likec4/tsconfig": "workspace:*",
    "@likec4/devops": "workspace:*",
    "@types/node": "catalog:",
    "remeda": "catalog:utils",
    "defu": "catalog:utils",
    "ufo": "catalog:utils",
    "tsx": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:",
    "obuild": "catalog:obuild",
    "nano-spawn": "catalog:externals",
    "vitest": "catalog:vitest"
  }
}
