{
  "extends": "@likec4/tsconfig/react-lib.json",
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "customConditions": [
      "sources"
    ],
    "noEmit": false,
    "emitDeclarationOnly": true,
    "outDir": "../__app__",
    "esModuleInterop": true,
    "isolatedModules": true,
    "noPropertyAccessFromIndexSignature": false,
    "noUnusedParameters": false,
    "useDefineForClassFields": true,
    "allowJs": true,
    "checkJs": true,
    "verbatimModuleSyntax": true,
    "jsx": "react-jsx",
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "./src",
    "./react",
    "./webcomponent"
  ],
  "references": [
    {
      "path": "../tsconfig.cli.json"
    },
    {
      "path": "../react/tsconfig.json"
    }
  ]
}
