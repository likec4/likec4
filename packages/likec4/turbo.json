{
  "$schema": "https://turbo.build/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "generate": {
      "dependsOn": [
        "@likec4/icons#generate",
        "@likec4/styles#generate"
      ],
      "outputs": [
        "app/src/routeTree.gen.ts",
        "icons/**",
        "styled-system/**"
      ],
      "outputLogs": "new-only"
    },
    "build-app": {
      "dependsOn": [
        "@likec4/core#build",
        "@likec4/diagram#build",
        "generate"
      ],
      "outputs": [
        "__app__/**"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!react/**",
        "!src/**",
        "!test/**",
        "!build.config.ts"
      ],
      "outputLogs": "new-only"
    },
    "build-cli": {
      "dependsOn": [
        "generate",
        "@likec4/log#build",
        "@likec4/generators#build",
        "@likec4/layouts#build",
        "@likec4/language-server#build",
        "@likec4/diagram#build"
      ],
      "outputs": [
        "dist/**",
        "react/*.mjs",
        "react/*.d.ts",
        "vite-plugin-modules.d.ts"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!app/**",
        "!scripts/**",
        "!dev/**",
        "!test/**"
      ],
      "outputLogs": "new-only"
    },
    "build": {
      "dependsOn": [
        "build-app",
        "build-cli"
      ],
      "outputs": [],
      "inputs": [],
      "outputLogs": "new-only"
    },
    "pack": {
      "dependsOn": [
        "build",
        "@likec4/core#pack"
      ],
      "outputs": [
        "package.tgz"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!dev/**",
        "!scripts/**",
        "!test/**"
      ],
      "outputLogs": "new-only"
    }
  }
}
