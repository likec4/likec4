{
  "$schema": "https://turbo.build/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "generate": {
      "dependsOn": [
        "@likec4/icons#generate",
        "@likec4/styles#generate"
      ],
      "inputs": [
        "app/src/routes/**",
        "tsr.config.json"
      ],
      "outputs": [
        "app/src/routeTree.gen.ts",
        "icons/**"
      ],
      "outputLogs": "new-only"
    },
    "typecheck": {
      "dependsOn": [
        "^generate",
        "generate",
        "topo"
      ],
      "outputs": [],
      "outputLogs": "new-only"
    },
    "build-react": {
      "dependsOn": [
        "@likec4/diagram#build:dist",
        "@likec4/diagram#build:bundle"
      ],
      "outputs": [
        "react/*.d.mts",
        "react/*.mjs"
      ],
      "inputs": [
        "tsconfig.react*.json",
        "react/",
        "scripts/bundle-react.ts"
      ],
      "outputLogs": "new-only"
    },
    "build-app": {
      "dependsOn": [
        "@likec4/diagram#build:dist",
        "generate"
      ],
      "outputs": [
        "__app__/**"
      ],
      "inputs": [
        "app/",
        "scripts/",
        "!scripts/bundle-react.ts"
      ],
      "outputLogs": "new-only"
    },
    "build-cli": {
      "dependsOn": [
        "@likec4/core#build",
        "@likec4/language-server#build"
      ],
      "outputs": [
        "dist/**",
        "vite-plugin-modules.d.ts"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!react/**",
        "!app/**",
        "!scripts/**",
        "!dev/**",
        "!test/**",
        "!tsconfig.react*.json"
      ],
      "outputLogs": "new-only"
    },
    "build": {
      "dependsOn": [
        "build-app",
        "build-cli",
        "build-react"
      ],
      "outputs": [],
      "inputs": [],
      "outputLogs": "new-only"
    },
    "pack": {
      "dependsOn": [
        "build",
        "@likec4/core#pack"
      ],
      "outputs": [
        "package.tgz"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!dev/**",
        "!test/**"
      ],
      "outputLogs": "new-only"
    }
  }
}
