{
  "$schema": "https://turbo.build/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "generate": {
      "dependsOn": [
        "@likec4/icons#generate"
      ],
      "outputs": [
        "app/src/routeTree.gen.ts",
        "icons/**"
      ],
      "inputs": [
        "scripts/generate.ts",
        "app/src/routes/**/*.tsx",
        "tsr.config.json",
        "package.json"
      ],
      "outputLogs": "new-only"
    },
    "build-app": {
      "dependsOn": [
        "@likec4/core#build",
        "@likec4/diagram#build",
        "generate"
      ],
      "outputs": [
        "__app__/**",
        "react/**"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!src/**",
        "!test/**",
        "!build.config.ts"
      ],
      "outputLogs": "new-only"
    },
    "build-cli": {
      "dependsOn": [
        "generate",
        "@likec4/language-server#build"
      ],
      "outputs": [
        "dist/**"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!app/**",
        "!scripts/**",
        "!dev/**",
        "!test/**"
      ],
      "outputLogs": "new-only"
    },
    "build": {
      "dependsOn": [
        "build-app",
        "build-cli"
      ],
      "outputs": [],
      "inputs": [],
      "outputLogs": "new-only"
    },
    "pack": {
      "dependsOn": [
        "build",
        "@likec4/core#pack"
      ],
      "outputs": [
        "package.tgz"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!dev/**",
        "!scripts/**",
        "!test/**"
      ],
      "outputLogs": "new-only"
    }
  }
}
