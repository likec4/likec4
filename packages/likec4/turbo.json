{
  "$schema": "https://turbo.build/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "generate:app": {
      "dependsOn": [
        "@likec4/styles#generate"
      ],
      "inputs": [
        "app/**",
        "panda.config.ts",
        "tsr.config.json"
      ],
      "outputs": [
        "styled-system/**",
        "app/src/routeTree.gen.ts"
      ],
      "outputLogs": "new-only"
    },
    "generate:icons": {
      "dependsOn": [
        "@likec4/icons#generate"
      ],
      "inputs": [
        "scripts/generate-icons.ts"
      ],
      "outputs": [
        "icons/**"
      ],
      "outputLogs": "new-only"
    },
    "generate": {
      "dependsOn": [
        "generate:app",
        "generate:icons"
      ]
    },
    "build-react": {
      "dependsOn": [
        "@likec4/diagram#build:dist",
        "@likec4/diagram#build:bundle"
      ],
      "outputs": [
        "react/*.d.mts",
        "react/*.mjs"
      ],
      "inputs": [
        "tsconfig.react*.json",
        "react/*.ts",
        "scripts/bundle-react.ts"
      ],
      "outputLogs": "new-only"
    },
    "build-app": {
      "dependsOn": [
        "generate:app",
        "@likec4/diagram#topo"
      ],
      "outputs": [
        "__app__/**"
      ],
      "inputs": [
        "app/**",
        "panda.config.ts",
        "scripts/bundle-app.ts"
      ],
      "outputLogs": "new-only"
    },
    "build-cli": {
      "dependsOn": [
        "@likec4/core#build",
        "@likec4/log#build",
        "@likec4/language-server#build",
        "@likec4/generators#topo",
        "@likec4/layouts#topo"
      ],
      "outputs": [
        "dist/**",
        "vite-plugin-modules.d.ts"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!react/**",
        "!app/**",
        "!scripts/**",
        "!dev/**",
        "!test/**",
        "!tsconfig.react*.json"
      ],
      "outputLogs": "new-only"
    },
    "build": {
      "dependsOn": [
        "generate",
        "build-app",
        "build-cli",
        "build-react"
      ],
      "outputLogs": "new-only"
    }
  }
}
