{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@likec4/tsconfig/base.json",
  "compilerOptions": {
    "noEmit": true,
    "module": "esnext",
    "target": "ESNext",
    "composite": true,
    "incremental": false,
    "tsBuildInfoFile": "scripts.tsbuildinfo",
    "types": [
      "node"
    ]
  },
  "include": [
    "scripts",
    "package.json"
  ],
  "references": [
    {
      "path": "./tsconfig.cli.json"
    }
  ]
}
