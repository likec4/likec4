{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@likec4/tsconfig/base.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "tsBuildInfoFile": "lib/scripts/.tsbuildinfo",
    "outDir": "lib/scripts",
    "rootDir": ".",
    "types": [
      "node"
    ]
  },
  "include": [
    "scripts",
    "*.config.ts",
    "package.json"
  ],
  "references": [
    {
      "path": "../../styled-system/styles/"
    }
  ]
}
