model {

  amazon = externalSystem 'Amazon Web Services' {
    description '
      Cloud Infrastructure, Hosting
      and Managed Services
    '
    style {
      color amber
      icon https://upload.wikimedia.org/wikipedia/commons/9/93/Amazon_Web_Services_Logo.svg
    }

    rds = container 'RDS' {
      description: 'Relational Databases'
      style {
        shape cylinder
      }

      pg = database 'PostgreSQL' {
        technology 'AWS Aurora'
        description: 'Database for storing relational data'
        style {
          icon https://icons.terrastruct.com/dev%2Fpostgresql.svg
        }
      }

      mysql = database 'MySQL' {
        technology 'AWS Aurora'
        description: 'Database for storing relational data'
        style {
          icon https://icons.terrastruct.com/dev%2Fmysql.svg
        }
      }

    }

    cognito = component 'Cognito' {
      description: 'User management and authentication'
    }

    kinesis = component 'Kinesis' {
      description: 'Streaming data'
      style {
        shape queue
      }

      hits = stream 'Hits' {
        description '
          Stream of page hits from Dashboard app.
          Data is sent via GoogleTagManager
        '

        -> sqs.hits 'send in batches'
      }

      cloud.ui.dashboard -> hits "send page hits via GoogleTagManager"
    }

    sqs = component 'SQS' {
      description 'Message queues'
      style {
        shape queue
      }

      hits = queue 'Hits' {
        description '
          Filtered data from stream of page hits.
          Ready to be processed.
        '
      }
    }

  }

}

views {

  view amazon of amazon {
    title "[system] Amazon"
    include
      *,
      cloud,
      cloud.* -> amazon

    style * {
      color muted
    }

    style cloud.* {
      color secondary
    }

    style amazon.* {
      color primary
    }

  }

  view amazon_rds of rds {
    title: '[context] Amazon RDS'

    include *,
       amazon,
       cloud,
       cloud.backend,
       cloud.* -> rds,
       cloud.backend.* -> rds,

    style * {
      color secondary
    }

    style cloud, cloud.backend, amazon {
      color muted
    }

    style rds, rds.* {
      color green
    }
  }

  view amazon_cognito of cognito {
    title '[context] Amazon Cognito'

    include *,
      amazon,
      cloud,
      cloud.* -> cognito

    style cloud, amazon {
      color muted
    }

    style cloud.* {
      color secondary
    }
  }


  view amazon_sqs of sqs {
    title '[context] Amazon SQS'

    include
      *,
      amazon,
      cloud,
      kinesis,
      cloud.* -> kinesis.*,
      cloud.* -> sqs,
      -> sqs.*

    style * {
      color secondary
    }

    style cloud, amazon {
      color muted
    }

    style sqs, sqs.* {
      color green
    }
  }

}
