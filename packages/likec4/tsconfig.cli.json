{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@likec4/tsconfig/base.json",
  "compilerOptions": {
    "customConditions": [
      "production",
      "sources",
    ],
    "target": "es2024",
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "lib/cli/.tsbuildinfo",
    "resolvePackageJsonImports": true,
    "outDir": "lib/cli",
    "types": [
      "node",
    ],
    "rootDirs": [
      "src",
      "."
    ],
    "paths": {
      "@/vite/*": [
        "./src/vite/*"
      ]
    }
  },
  "include": [
    "src/",
    "package.json"
  ],
  "references": [
    {
      "path": "../core/tsconfig.json"
    },
    {
      "path": "../config/tsconfig.json"
    },
    {
      "path": "../language-services/tsconfig.json"
    },
    {
      "path": "../language-server/tsconfig.json"
    },
    {
      "path": "../vite-plugin/tsconfig.json"
    },
    {
      "path": "../diagram/tsconfig.src.json"
    },
    {
      "path": "../generators/tsconfig.json"
    },
    {
      "path": "../layouts/tsconfig.json"
    }
  ]
}
