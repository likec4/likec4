{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@likec4/tsconfig/base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "lib/cli/.tsbuildinfo",
    "outDir": "lib/cli",
    "types": [
      "node"
    ],
    "paths": {
      "@/vite/*": [
        "./src/vite/*"
      ]
    }
  },
  "include": [
    "./src",
    "package.json"
  ],
  "exclude": [
    "./src/vite-plugin/modules.d.ts"
  ],
  "references": [
    {
      "path": "../core/"
    },
    {
      "path": "../log/"
    },
    {
      "path": "../generators/"
    },
    {
      "path": "../layouts/"
    },
    {
      "path": "../language-server/"
    }
  ]
}
