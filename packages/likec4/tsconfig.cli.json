{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@likec4/tsconfig/base.json",
  "compilerOptions": {
    "noUnusedParameters": false,
    "module": "esnext",
    "composite": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "checkJs": false,
    "tsBuildInfoFile": "cli.tsbuildinfo",
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/",
    "package.json"
  ],
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../generators"
    },
    {
      "path": "../language-server"
    },
    {
      "path": "../layouts"
    },
    {
      "path": "../log"
    }
  ]
}
