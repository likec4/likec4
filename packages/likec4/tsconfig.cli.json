{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@likec4/tsconfig/base.json",
  "compilerOptions": {
    "noUnusedParameters": false,
    "module": "esnext",
    "customConditions": [
      "sources"
    ],
    "noEmit": false,
    "composite": true,
    "tsBuildInfoFile": ".tsbuildinfo/cli.tsbuildinfo",
    "outDir": ".tsbuildinfo/cli",
    "types": [
      "node"
    ],
    "paths": {
      "@/vite/*": [
        "./src/vite/*"
      ],
      "likec4/react": [
        "./app/react/components/*"
      ]
    }
  },
  "include": [
    "./src",
    "package.json"
  ],
  "exclude": [
    "./src/vite-plugin/modules.d.ts"
  ],
  "references": [
    {
      "path": "../core/tsconfig.json"
    },
    {
      "path": "../language-server/tsconfig.json"
    }
  ]
}
