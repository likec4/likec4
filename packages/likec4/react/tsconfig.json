{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@likec4/tsconfig/base.json",
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "customConditions": [
      "sources"
    ],
    "noEmit": false,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowJs": true,
    "checkJs": false,
    "verbatimModuleSyntax": true,
    "jsx": "react-jsx",
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "."
  ],
  "exclude": [
    "./dist",
  ],
  "references": [
    {
      "path": "../tsconfig.cli.json"
    }
  ]
}
