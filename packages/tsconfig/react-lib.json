{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "extends": "./base.json",
  "exclude": [
    "node_modules",
    "${configDir}/node_modules",
    "dist",
    "${configDir}/dist",
    "build",
    "${configDir}/build"
  ],
  "include": [
    "${configDir}/src"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "webworker"
    ],
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Bundler"
  }
}
