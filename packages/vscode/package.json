{
  "name": "likec4-vscode",
  "version": "0.6.3",
  "publisher": "likec4",
  "displayName": "LikeC4 Architecture Modeling",
  "description": "Support for the LikeC4 modeling language",
  "homepage": "https://like-c4.dev",
  "author": "Denis Davydkov <denis@davydkov.com>",
  "license": "MIT",
  "files": [
    "contrib",
    "dist",
    "data",
    "./language-configuration.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/likec4/likec4.git",
    "directory": "packages/vscode"
  },
  "bugs": {
    "url": "https://github.com/likec4/likec4/issues",
    "email": "denis@davydkov.com"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "vsce": {
    "yarn": true,
    "dependencies": false
  },
  "scripts": {
    "build:vscode": "run -T turbo run build --filter='likec4-vscode...'",
    "open-web": "yarn build:vscode && yarn dlx @vscode/test-web --quality stable --extensionDevelopmentPath=. $PROJECT_CWD/examples/bigbank",
    "build:release": "yarn node esbuild.mjs --minify && run copy",
    "compile": "tsc -noEmit",
    "copy:contrib": "shx echo 'copy contrib' && shx mkdir -p contrib && shx --silent cp -r $INIT_CWD/../language-server/contrib/* contrib/",
    "copy:preview": "shx echo 'copy preview' && shx mkdir -p dist/preview && shx --silent cp -r $INIT_CWD/../vscode-preview/dist/* dist/preview/",
    "copy": "run-p 'copy:*'",
    "build": "yarn node esbuild.mjs && run copy",
    "dev": "yarn node esbuild.mjs --watch",
    "lint": "run -T eslint src/ --fix",
    "clean": "run -T rimraf contrib dist"
  },
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=17"
  },
  "categories": [
    "Programming Languages",
    "Visualization"
  ],
  "icon": "./data/logo256.png",
  "galleryBanner": {
    "color": "#111111",
    "theme": "dark"
  },
  "contributes": {
    "languages": [
      {
        "id": "likec4",
        "aliases": [
          "Like C4",
          "c4"
        ],
        "extensions": [
          ".c4",
          ".likec4",
          ".like-c4"
        ],
        "configuration": "language-configuration.json",
        "icon": {
          "light": "./data/icon.png",
          "dark": "./data/icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "likec4",
        "scopeName": "source.likec4",
        "path": "contrib/likec4.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "LikeC4",
      "properties": {
        "likec4.trace.extension": {
          "type": "string",
          "enum": [
            "off",
            "verbose"
          ],
          "default": "off",
          "description": "Enable debug logging for the LikeC4 extension.",
          "scope": "window"
        },
        "likec4.trace.server": {
          "type": "string",
          "scope": "window",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the LikeC4 language server."
        }
      }
    },
    "commands": [
      {
        "command": "likec4.open-preview",
        "title": "Open Preview",
        "category": "LikeC4"
      },
      {
        "command": "likec4.open-d2",
        "title": "Open D2 Preview",
        "category": "LikeC4"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:likec4",
    "onWebviewPanel:likec4-preview"
  ],
  "main": "./dist/extension-node.js",
  "browser": "./dist/extension-web.js",
  "devDependencies": {
    "@likec4/core": "workspace:*",
    "@likec4/generators": "workspace:*",
    "@likec4/language-protocol": "workspace:*",
    "@likec4/language-server": "workspace:*",
    "@likec4/layouts": "workspace:*",
    "@likec4/vscode-preview": "workspace:*",
    "@types/node": "^18.15.11",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^2.19.0",
    "esbuild": "^0.17.18",
    "froebel": "^0.23.2",
    "langium": "^1.1.0",
    "nanoid": "^4.0.2",
    "npm-run-all": "^4.1.5",
    "path-browserify": "^1.0.1",
    "rambdax": "^9.1.0",
    "shx": "^0.3.4",
    "src": "link:./src",
    "typed-inject": "^3.0.1",
    "typescript": "^5.0.4",
    "vscode-languageclient": "8.0.2",
    "vscode-languageserver": "8.0.2",
    "vscode-languageserver-protocol": "3.17.2",
    "vscode-uri": "~3.0.7",
    "xstream": "^11.14.0"
  },
  "packageManager": "yarn@3.4.1"
}
