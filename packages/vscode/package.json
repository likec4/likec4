{
  "name": "@likec4/vscode",
  "publisher": "likec4",
  "displayName": "Like C4",
  "description": "Please enter a brief description here",
  "version": "0.4.0",
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "scripts": {
    "build:vscode": "run -T build --filter='vscode...'",
    "open-web": "yarn build:vscode && yarn dlx @vscode/test-web --quality stable --extensionDevelopmentPath=. $PROJECT_CWD/examples/bigbank",
    "release:build": "yarn node esbuild.cjs --minify && run copy",
    "compile": "tsc -noEmit",
    "copy:contrib": "shx echo 'copy contrib' && shx mkdir -p contrib && shx --silent cp -r ../language-server/contrib/* contrib/",
    "copy:preview": "shx echo 'copy preview' && shx mkdir -p dist/preview && shx --silent cp -r ../vscode-preview/dist/* dist/preview/",
    "copy": "run-p 'copy:*'",
    "build": "yarn node esbuild.cjs && run copy",
    "dev": "yarn node esbuild.cjs --watch",
    "lint": "run -T eslint src/ --fix",
    "clean": "run -T rimraf contrib dist"
  },
  "files": [
    "contrib",
    "dist",
    "./language-configuration.json"
  ],
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=17"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "likec4",
        "aliases": [
          "Like C4",
          "likec4"
        ],
        "extensions": [
          ".c4",
          ".likec4",
          ".like-c4"
        ],
        "configuration": "language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "likec4",
        "scopeName": "source.likec4",
        "path": "contrib/like-c4.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Like C4",
      "properties": {
        "likec4.trace.extension": {
          "type": "string",
          "enum": [
            "off",
            "verbose"
          ],
          "default": "off",
          "description": "Enable debug logging for the LikeC4 extension.",
          "scope": "window"
        },
        "likec4.trace.server": {
          "type": "string",
          "scope": "window",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "messages",
          "description": "Traces the communication between VS Code and the LikeC4 language server."
        }
      }
    }
  },
  "activationEvents": [
    "onWebviewPanel:likec4-preview"
  ],
  "main": "./dist/node/index.js",
  "browser": "./dist/browser/index.js",
  "devDependencies": {
    "@likec4/core": "workspace:*",
    "@likec4/generators": "workspace:*",
    "@likec4/language-server": "workspace:*",
    "@likec4/layouts": "workspace:*",
    "@likec4/vscode-preview": "workspace:*",
    "@types/node": "^18.15.11",
    "@types/vscode": "^1.74.0",
    "esbuild": "^0.17.15",
    "froebel": "^0.23.2",
    "langium": "^1.1.0",
    "nanoid": "^4.0.2",
    "npm-run-all": "^4.1.5",
    "path-browserify": "^1.0.1",
    "rambdax": "^9.1.0",
    "shx": "^0.3.4",
    "typed-inject": "^3.0.1",
    "typescript": "^5.0.4",
    "vscode-languageclient": "8.0.2",
    "vscode-languageserver": "8.0.2",
    "vscode-languageserver-protocol": "3.17.2",
    "vscode-uri": "3.0.7",
    "xstream": "^11.14.0"
  },
  "packageManager": "yarn@3.4.1"
}
