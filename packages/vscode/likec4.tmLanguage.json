{
  "name": "likec4",
  "scopeName": "source.likec4",
  "fileTypes": [".c4", ".likec4", ".like-c4"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#string"
    },
    {
      "match": "\\b(link|icon):?\\s+([^\\s]+)",
      "captures": {
        "1": {
          "name": "variable.other.property.likec4"
        },
        "2": {
          "name": "string.quoted.single.likec4"
        }
      }
    },
    {
      "name": "keyword.control.likec4",
      "match": "\\b(specification|model|views)\\b"
    },
    {
      "match": "\\b(tag|kind)\\s+is\\b",
      "name": "keyword.control.likec4"
    },
    {
      "match": "\\b(element|tag|relationship)\\s+([^\\s]+)\\b",
      "captures": {
        "1": {
          "name": "keyword.control.likec4"
        },
        "2": {
          "name": "entity.name.type.enum.likec4"
        }
      }
    },
    {
      "match": "\\b(opacity):?\\s+([^\\s]+)",
      "captures": {
        "1": {
          "name": "variable.other.property.likec4"
        },
        "2": {
          "name": "constant.numeric.likec4"
        }
      }
    },
    {
      "match": "(-\\[)([^\\]]*)(\\]->)",
      "captures": {
        "1": {
          "name": "keyword.symbol.likec4"
        },
        "2": {
          "name": "entity.name.function.likec4"
        },
        "3": {
          "name": "keyword.symbol.likec4"
        }
      }
    },
    {
      "match": "\\b(shape|color|head|tail|line|border):?\\s+([-\\w]+)\\b",
      "captures": {
        "1": {
          "name": "variable.other.property.likec4"
        },
        "2": {
          "name": "entity.name.type.enum.likec4"
        }
      }
    },
    {
      "match": "\\b(aws|azure|gcp|tech):([-\\w]+)\\b",
      "name": "entity.name.type.enum.likec4"
    },
    {
      "name": "entity.name.variable.likec4",
      "match": "\\b\\.(\\*|_)"
    },
    {
      "name": "entity.name.type.enum.likec4",
      "match": "\\b(TopBottom|LeftRight|BottomTop|RightLeft)\\b"
    },
    {
      "name": "entity.name.type.enum.likec4",
      "match": "\\b(amber|blue|gray|green|indigo|muted|primary|secondary|red|sky|slate)\\b"
    },
    {
      "name": "variable.other.property.likec4",
      "match": "\\b(title|description|technology|navigateTo|notation)\\b"
    },
    {
      "name": "keyword.control.likec4",
      "match": "\\belement(\\.(kind|tag)?)?\\b"
    },
    {
      "name": "keyword.control.likec4",
      "match": "\\b(and|autoLayout|border|browser|color|crow|cylinder|dashed|description|diamond|dot|dotted|dynamic|global|group|element|exclude|extend|extends|head|icon|icons|include|it|kind|line|likec4lib|link|metadata|mobile|model|navigateTo|none|not|normal|odiamond|odot|of|onormal|opacity|open|or|parallel|par|person|queue|rectangle|relationship|shape|solid|specification|storage|styleGroup|style|tag|tail|technology|this|title|vee|view|views|where|with)\\b"
    },
    {
      "name": "keyword.symbol.likec4",
      "match": "(\\{|\\}|\\(|\\)|\\:|\\]->|-\\[|<->|<-|->|\\,|\\;|\\!|\\=+)"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.likec4",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.likec4"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.likec4"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.likec4"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.likec4"
        }
      ]
    },
    "string": {
      "patterns": [
        {
          "name": "string.quoted.double.likec4",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "include": "#string-character-escape"
            }
          ]
        },
        {
          "name": "string.quoted.single.likec4",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "include": "#string-character-escape"
            }
          ]
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.likec4",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}
