{
  "$schema": "https://turbo.build/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "generate": {
      "outputs": [
        "src/meta.ts"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!src/**"
      ],
      "outputLogs": "new-only"
    },
    "build": {
      "dependsOn": [
        "generate",
        "@likec4/language-server#generate",
        "@likec4/config#generate",
        "@likec4/styles#generate",
        "sources",
        "@likec4/vscode-preview#build"
      ],
      "cache": false,
      "outputLogs": "new-only"
    }
  }
}
