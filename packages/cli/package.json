{
  "name": "@likec4/cli",
  "version": "0.4.0",
  "bin": {
    "likec4": "dist/likec4.js"
  },
  "engines": {
    "node": ">=17"
  },
  "files": [
    "dist"
  ],
  "main": "dist/likec4.js",
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "scripts": {
    "compile": "tsc --noEmit",
    "release:build": "run build --minify",
    "build": "esbuild src/cli.ts --bundle --tree-shaking=true --platform=node --target=node16 --outfile=dist/likec4.js",
    "dev": "run build --watch",
    "lint": "run -T eslint src/ --fix",
    "clean": "run -T rimraf dist"
  },
  "devDependencies": {
    "@likec4/core": "workspace:*",
    "@likec4/generators": "workspace:*",
    "@likec4/language-server": "workspace:*",
    "@likec4/layouts": "workspace:*",
    "@types/node": "^18.15.11",
    "chalk": "^5.2.0",
    "commander": "^10.0.0",
    "esbuild": "^0.17.15",
    "fast-glob": "^3.2.12",
    "langium": "^1.1.0",
    "mkdirp": "^2.1.6",
    "rambdax": "^9.1.0",
    "typescript": "^5.0.3",
    "vscode-uri": "3.0.7"
  }
}
