{
  "name": "@likec4/log",
  "description": "Shared interface for logging",
  "license": "MIT",
  "version": "1.36.1",
  "bugs": "https://github.com/likec4/likec4/issues",
  "homepage": "https://likec4.dev",
  "author": "Denis Davydkov <denis@davydkov.com>",
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/likec4/likec4.git",
    "directory": "packages/log"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "sources": "./src/index.ts",
      "default": {
        "types": "./dist/index.d.mts",
        "import": "./dist/index.mjs",
        "default": "./dist/index.mjs"
      }
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "scripts": {
    "typecheck": "tsc -b --verbose",
    "build": "unbuild",
    "pack": "pnpm pack",
    "postpack": "cp likec4-log-$npm_package_version.tgz package.tgz || true",
    "lint:package": "pnpx publint ./package.tgz",
    "clean": "pnpm rimraf dist lib"
  },
  "dependencies": {
    "@logtape/logtape": "catalog:utils"
  },
  "devDependencies": {
    "@likec4/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "merge-error-cause": "^5.0.2",
    "safe-stringify": "catalog:utils",
    "std-env": "catalog:utils",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "wrap-error-message": "^3.0.1"
  }
}
