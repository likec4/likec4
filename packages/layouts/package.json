{
  "name": "@likec4/layouts",
  "license": "MIT",
  "version": "1.20.0",
  "bugs": "https://github.com/likec4/likec4/issues",
  "homepage": "https://likec4.dev",
  "author": "Denis Davydkov <denis@davydkov.com>",
  "files": [
    "dist",
    "!dist/src",
    "!**/__fixtures__/",
    "!**/*.spec.*",
    "!**/*.snap",
    "!**/*.map"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/likec4/likec4.git",
    "directory": "packages/layouts"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "sources": "./src/index.ts",
      "default": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    },
    "./graphviz/binary": {
      "sources": "./src/graphviz/binary/index.ts",
      "default": {
        "types": "./dist/graphviz/binary/index.d.mts",
        "default": "./dist/graphviz/binary/index.mjs"
      }
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "prepack": "turbo run build",
    "build": "unbuild",
    "lint": "run -T eslint src/ --fix",
    "test": "vitest run --no-isolate",
    "test:watch": "vitest",
    "clean": "rm -r -f -g 'dist/**'"
  },
  "dependencies": {
    "@hpcc-js/wasm-graphviz": "1.7.0",
    "@likec4/core": "workspace:*",
    "@likec4/log": "workspace:*",
    "execa": "^9.3.1",
    "indent-string": "^5.0.0",
    "khroma": "^2.1.0",
    "p-limit": "^6.1.0",
    "remeda": "^2.19.0",
    "strip-indent": "^4.0.0",
    "ts-graphviz": "^1.8.2",
    "type-fest": "4.28.1",
    "word-wrap": "^1.2.5"
  },
  "devDependencies": {
    "@likec4/tsconfig": "workspace:*",
    "@types/node": "^20.17.7",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3",
    "unbuild": "^3.2.0",
    "vitest": "^2.1.8"
  },
  "packageManager": "yarn@4.6.0"
}
