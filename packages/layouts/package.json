{
  "name": "@likec4/layouts",
  "description": "Layout algorithms for LikeC4 views",
  "license": "MIT",
  "version": "1.49.0",
  "bugs": "https://github.com/likec4/likec4/issues",
  "homepage": "https://likec4.dev",
  "author": "Denis Davydkov <denis@davydkov.com>",
  "files": [
    "dist",
    "src",
    "**/package.json",
    "!**/__*/**",
    "!**/*.spec.*",
    "!**/*.snap",
    "!**/*.map"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/likec4/likec4.git",
    "directory": "packages/layouts"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "sources": "./src/index.ts",
      "default": {
        "types": "./dist/index.d.mts",
        "import": "./dist/index.mjs",
        "default": "./dist/index.mjs"
      }
    },
    "./sequence": {
      "sources": "./src/sequence/index.ts",
      "default": {
        "types": "./dist/sequence/index.d.mts",
        "import": "./dist/sequence/index.mjs",
        "default": "./dist/sequence/index.mjs"
      }
    },
    "./graphviz/binary": {
      "sources": "./src/graphviz/binary/index.ts",
      "default": {
        "types": "./dist/graphviz/binary/index.d.mts",
        "import": "./dist/graphviz/binary/index.mjs",
        "default": "./dist/graphviz/binary/index.mjs"
      }
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public",
    "types": "dist/index.d.mts",
    "module": "dist/index.mjs"
  },
  "scripts": {
    "typecheck": "tsc -b --verbose",
    "build": "obuild",
    "lint": "run -T eslint src/ --fix",
    "lint:package": "pnpx publint ./package.tgz",
    "test": "vitest run --no-isolate",
    "test:watch": "vitest",
    "clean": "likec4ops clean",
    "prepack": "likec4ops prepack",
    "pack": "pnpm pack",
    "postpack": "likec4ops postpack"
  },
  "dependencies": {
    "@hpcc-js/wasm-graphviz": "catalog:externals",
    "@likec4/core": "workspace:*",
    "@likec4/log": "workspace:*",
    "nano-spawn": "catalog:externals",
    "type-fest": "catalog:externals",
    "p-limit": "catalog:utils",
    "p-queue": "catalog:utils",
    "remeda": "catalog:utils",
    "word-wrap": "^1.2.5",
    "indent-string": "catalog:utils",
    "khroma": "catalog:utils",
    "strip-indent": "catalog:utils",
    "fast-equals": "catalog:utils",
    "ts-graphviz": "^1.8.2",
    "@lume/kiwi": "catalog:utils",
    "which": "^5.0.0"
  },
  "devDependencies": {
    "@likec4/tsconfig": "workspace:*",
    "@likec4/devops": "workspace:*",
    "@types/node": "catalog:",
    "@types/which": "^3.0.4",
    "turbo": "catalog:",
    "typescript": "catalog:",
    "obuild": "catalog:obuild",
    "vitest": "catalog:vitest"
  }
}
