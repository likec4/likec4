{
  "name": "@likec4/layouts",
  "license": "MIT",
  "version": "1.0.0",
  "bugs": "https://github.com/likec4/likec4/issues",
  "homepage": "https://likec4.dev",
  "author": "Denis Davydkov <denis@davydkov.com>",
  "files": [
    "dist",
    "!dist/src",
    "!**/__fixtures__/",
    "!**/*.spec.*",
    "!**/*.snap",
    "!**/*.map"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/likec4/likec4.git",
    "directory": "packages/layouts"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": "./src/index.ts",
    "./graphviz/binary": "./src/graphviz/binary/index.ts"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./graphviz/binary": {
        "types": "./dist/graphviz/binary/index.d.ts",
        "default": "./dist/graphviz/binary/index.js"
      }
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "prepack": "tsc -p tsconfig.build.json",
    "build": "tsc -b",
    "lint": "run -T eslint src/ --fix",
    "test": "vitest run",
    "clean": "run -T rimraf -g 'dist/**' '.tsbuildinfo/**'"
  },
  "dependencies": {
    "esm-env": "^1.0.0",
    "execa": "^8.0.1",
    "indent-string": "^5.0.0",
    "khroma": "^2.1.0",
    "p-limit": "^4.0.0",
    "remeda": "^1.61.0",
    "strip-indent": "^4.0.0",
    "ts-graphviz": "^1.8.2",
    "type-fest": "^4.18.2",
    "word-wrap": "^1.2.5"
  },
  "peerDependencies": {
    "@hpcc-js/wasm": "^2.16.2",
    "@likec4/core": "workspace:*",
    "@likec4/graph": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@likec4/graph": {
      "optional": true
    }
  },
  "devDependencies": {
    "@hpcc-js/wasm": "^2.16.2",
    "@likec4/core": "workspace:*",
    "@likec4/graph": "workspace:*",
    "@types/node": "^20.12.7",
    "typescript": "^5.4.5",
    "vitest": "~1.5.2"
  },
  "packageManager": "yarn@4.2.2"
}
