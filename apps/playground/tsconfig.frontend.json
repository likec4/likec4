{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@likec4/tsconfig/react-lib.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "tsBuildInfoFile": "lib/frontend.tsbuildinfo",
    "target": "esnext",
    "useDefineForClassFields": true,
    "allowArbitraryExtensions": true,
    "customConditions": [
      "sources"
    ],
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "paths": {
      "$components/*": [
        "./src/components/*"
      ],
      "$state/*": [
        "./src/state/*"
      ],
      "$hooks/*": [
        "./src/hooks/*"
      ],
      "$/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/"
  ],
  "references": [
    {
      "path": "./tsconfig.worker.json"
    },
    {
      "path": "../../packages/core/"
    },
    {
      "path": "../../packages/diagram/tsconfig.src.json"
    },
    {
      "path": "../../packages/layouts/"
    },
    {
      "path": "../../packages/language-server/"
    }
  ]
}
