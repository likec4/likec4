// Define deployment node kinds
specification {
  deploymentNode node
  deploymentNode zone
  deploymentNode environment {
    style {
      color gray
    }
  }
}

// Deployment model
deployment {

  node customerNode {
    instanceOf customer
  }

  environment prod 'Production' {
    eu = zone 'EU' {
      zone zone1 {
        instanceOf saas.ui
        instanceOf saas.backend
      }
      zone zone2 {
        instanceOf saas.ui
        instanceOf saas.backend
      }
      db = instanceOf saas.db
    }

    us = zone 'US' {
      zone zone1 {
        instanceOf saas.ui
        instanceOf saas.backend
      }
      zone zone2 {
        instanceOf saas.ui
        instanceOf saas.backend
      }
      db = instanceOf saas.db
    }

    us.db -> eu.db 'replicates'
    eu.db -> us.db 'replicates'
  }
}

views {
  deployment view index {
    title 'Production Deployment'

    include
      *,
      prod.**

    style eu._ {
      color green
    }
    style us._ {
      color indigo
    }
	}
}
