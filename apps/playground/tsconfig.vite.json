{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@likec4/tsconfig/base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "lib/vite.tsbuildinfo",
    "outDir": "lib/vite",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "exactOptionalPropertyTypes": false,
    "rootDir": "."
  },
  "include": [
    "*.config.ts",
    "package.json",
    "tsr.config.json"
  ],
  "references": [
    {
      "path": "./tsconfig.frontend.json"
    },
  ]
}
