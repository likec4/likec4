{
  "name": "likec4",
  "scopeName": "source.likec4",
  "fileTypes": [".c4", ".likec4", ".like-c4"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#string"
    },
    {
      "match": "\\b(link|icon):?\\s+([^\\s]+)",
      "captures": {
        "1": {
          "name": "variable.other.property.likec4"
        },
        "2": {
          "name": "string.quoted.single.likec4"
        }
      }
    },
    {
      "name": "keyword.control.likec4",
      "match": "\\b(specification|model|views)\\b"
    },
    {
      "match": "\\b(element|tag|relationship)\\s+([^\\s]+)\\b",
      "captures": {
        "1": {
          "name": "keyword.control.likec4"
        },
        "2": {
          "name": "entity.name.class.likec4"
        }
      }
    },
    {
      "match": "\\b(opacity):?\\s+([^\\s]+)",
      "captures": {
        "1": {
          "name": "variable.other.property.likec4"
        },
        "2": {
          "name": "constant.numeric.likec4"
        }
      }
    },
    {
      "match": "\\b(include|exclude)\\s+(element\\.kind|element\\.tag)\\s*(==|\\!=|=)\\s*([a-zA-Z#][_\\*\\.\\w]*)\\b",
      "captures": {
        "1": {
          "name": "keyword.control.likec4"
        },
        "2": {
          "name": "keyword.control.likec4"
        },
        "3": {
          "name": "keyword.symbol.likec4"
        },
        "4": {
          "name": "variable.other.constant.likec4"
        }
      }
    },
    {
      "match": "\\b(actor|component|system|container|service|include|exclude|extend)\\s+([a-zA-Z][_\\*\\.\\w]*)\\b",
      "captures": {
        "1": {
          "name": "keyword.control.likec4"
        },
        "2": {
          "name": "variable.other.constant.likec4"
        }
      }
    },
    {
      "match": "\\b(navigateTo)\\s+([_\\*\\.\\w]+)\\b",
      "captures": {
        "1": {
          "name": "keyword.control.likec4"
        },
        "2": {
          "name": "variable.other.constant.likec4"
        }
      }
    },
    {
      "name": "keyword.control.likec4",
      "match": "\\b(include|exclude)\\b"
    },
    {
      "match": "\\b(shape|color|head|tail|line|border):?\\s+(\\w+)\\b",
      "captures": {
        "1": {
          "name": "variable.other.property.likec4"
        },
        "2": {
          "name": "entity.name.class.likec4"
        }
      }
    },
    {
      "name": "entity.name.class.likec4",
      "match": "\\b(TopBottom|LeftRight|BottomTop|RightLeft)\\b"
    },
        {
      "name": "entity.name.class.likec4",
      "match": "\\b(amber|blue|gray|green|indigo|muted|primary|secondary|red|sky|slate|none)\\b"
    },
    {
      "match": "\\b([^\\W]+)\\s*(=)\\s*([^\\W]+)\\b",
      "captures": {
        "1": {
          "name": "variable.other.constant.likec4"
        },
        "2": {
          "name": "keyword.operator.likec4"
        },
        "3": {
          "name": "keyword.control.likec4"
        }
      }
    },
    {
      "match": "\\b(view)\\s+([^\\W]+)\\s+(of|extends)\\s+([a-zA-Z][_\\.\\w]*)\\b",
      "captures": {
        "1": {
          "name": "keyword.control.likec4"
        },
        "2": {
          "name": "variable.other.constant.likec4"
        },
        "3": {
          "name": "keyword.control.likec4"
        },
        "4": {
          "name": "variable.other.constant.likec4"
        }
      }
    },
    {
      "match": "\\b(view)\\s+(of)\\s+([a-zA-Z][_\\.\\w]*)\\b",
      "captures": {
        "1": {
          "name": "keyword.control.likec4"
        },
        "2": {
          "name": "keyword.control.likec4"
        },
        "3": {
          "name": "variable.other.constant.likec4"
        }
      }
    },
    {
      "match": "\\b(view)\\s+([_\\.\\w]*)\\b",
      "captures": {
        "1": {
          "name": "keyword.control.likec4"
        },
        "2": {
          "name": "variable.other.constant.likec4"
        }
      }
    },
    {
      "match": "\\b(it|this)\\s+(->|-\\[\\w+\\]->)\\s+([^\\W]+)",
      "captures": {
        "1": {
          "name": "keyword.control.likec4"
        },
        "2": {
          "name": "storage.type.function.likec4"
        },
        "3": {
          "name": "variable.other.constant.likec4"
        }
      }
    },
    {
      "match": "(\\b[_\\.\\w]+|\\*)\\s+(<?->|-\\[\\w+\\]->)\\s+([_\\.\\w]+)\\b",
      "captures": {
        "1": {
          "name": "variable.other.constant.likec4"
        },
        "2": {
          "name": "entity.name.function.likec4"
        },
        "3": {
          "name": "variable.other.constant.likec4"
        }
      }
    },
    {
      "match": "\\b([\\.\\w]+)\\s+(with)\\s+\\{",
      "captures": {
        "1": {
          "name": "variable.other.constant.likec4"
        },
        "2": {
          "name": "keyword.control.likec4"
        }
      }
    },
    {
      "match": "\\s+(<?->|<-|-\\[\\w+\\]->)\\s+([a-zA-Z][_\\.\\w]*)\\b",
      "captures": {
        "1": {
          "name": "storage.type.function.likec4"
        },
        "2": {
          "name": "variable.other.constant.likec4"
        }
      }
    },
    {
      "name": "variable.other.constant.likec4",
      "match": "#[^\\s]+\\b"
    },
    {
      "name": "storage.type.function.likec4",
      "match": "(<?->|<-)"
    },
    {
      "name": "variable.other.constant.likec4",
      "match": "\\b(customer|bigbank|singlePageApplication|mobileApp|apiApplication|mainframe|email|internetBankingSystem|cloud|ui|backend|auth|web|frontend|api|webApp|authService|messageBroker)\\b"
    },
    {
      "name": "keyword.control.likec4",
      "match": "\\b(BottomTop|LeftRight|RightLeft|TopBottom|autoLayout|browser|metadata|mobile|actor|color|cylinder|description|dynamic|global|group|element|exclude|extends|extend|include|it|model|muted|notation|notes|of|parallel|par|person|predicateGroup|predicate|primary|queue|rectangle|secondary|shape|specification|storage|styleGroup|style|tag|technology|this|title|view|views|where|with)\\b"
    },
    {
      "match": "(\\b\\.)?(\\*|_),?",
      "captures": {
        "2": {
          "name": "variable.other.constant.likec4"
        }
      }
    },
    {
      "name": "string.quoted.double.likec4",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    },
    {
      "name": "string.quoted.single.likec4",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.likec4",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.likec4"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.likec4"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.likec4"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.likec4"
        }
      ]
    },
    "string": {
      "patterns": [
        {
          "name": "string.quoted.double.likec4",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "include": "#string-character-escape"
            }
          ]
        },
        {
          "name": "string.quoted.single.likec4",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "include": "#string-character-escape"
            }
          ]
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.likec4",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}
