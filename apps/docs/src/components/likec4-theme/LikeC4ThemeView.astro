---
import { type LikeC4ViewId, LikeC4View } from 'likec4:react/likec4-theme'
interface Props {
  viewId: LikeC4ViewId
  fitViewPadding?: number
  interactive?: boolean
}
const {
  viewId,
  interactive = true,
  fitViewPadding = 0.05,
} = Astro.props
---

<LikeC4View
  className="likec4-theme-view"
  viewId={viewId}
  fitViewPadding={fitViewPadding}
  enableElementDetails={false}
  browser={interactive ? {
    enableFocusMode: false,
    enableElementDetails: false,
    enableRelationshipDetails: false,
    enableRelationshipBrowser: false,
    enableSearch: false,
    showDiagramTitle: false,
  } : false}
  client:only="react"
>
</LikeC4View>

<style>
.likec4-theme-view {
  max-width: 700px;
  margin-left: auto;
  margin-right: auto;
}
</style>
