---
import { LikeC4View, type LikeC4ViewId } from './likec4-views'
interface Props {
  viewId: LikeC4ViewId;
  interactive?: boolean;
}
const {
  viewId,
  interactive = true
} = Astro.props
---

<LikeC4View
  className="likec4-theme-view"
  viewId={viewId}
  interactive={interactive}
  injectFontCss={false}
  enableRelationshipBrowser={false}
  client:only="react">
</LikeC4View>

<style>
  .likec4-theme-view {
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }
</style>
