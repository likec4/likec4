---
import type { ViewPadding } from 'likec4/react'
import type { LikeC4ViewId } from 'likec4:react/likec4-theme'
import { LikeC4View } from 'likec4:react/likec4-theme'
interface Props {
  viewId: LikeC4ViewId
  fitViewPadding?: ViewPadding
  interactive?: boolean
}
const {
  viewId,
  interactive = true,
  fitViewPadding = '8px',
} = Astro.props
---

<LikeC4View
  className="likec4-theme-view"
  viewId={viewId}
  fitViewPadding={fitViewPadding}
  browser={interactive
    ? {
      enableFocusMode: false,
      enableElementDetails: false,
      enableRelationshipDetails: false,
      enableRelationshipBrowser: false,
      enableSearch: false,
    }
    : false}
  client:only="react"
>
</LikeC4View>

<style>
.likec4-theme-view {
  max-width: 700px;
  margin-left: auto;
  margin-right: auto;
}
</style>
