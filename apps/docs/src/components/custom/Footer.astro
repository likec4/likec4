---
import Logo from '../Logo.astro'
const currentYear = new Date().getFullYear()

const footerSections = [
  {
    title: 'Documentation',
    icon: 'book',
    links: [
      { label: 'Getting Started', href: '/tutorial/' },
      { label: 'Language Reference', href: '/dsl/intro/' },
      { label: 'Examples', href: '/showcases/bigbank/' },
      { label: 'API Reference', href: '/tooling/model-api/' },
    ],
  },
  {
    title: 'Resources',
    icon: 'code',
    links: [
      { label: 'Playground', href: 'https://playground.likec4.dev/w/tutorial/' },
      { label: 'VS Code Extension', href: 'https://marketplace.visualstudio.com/items?itemName=likec4.likec4-vscode' },
      { label: 'CLI Tools', href: '/tooling/cli/' },
      { label: 'Vite Plugin', href: '/tooling/vite-plugin/' },
    ],
  },
  {
    title: 'Community',
    icon: 'users',
    links: [
      { label: 'GitHub Discussions', href: 'https://github.com/likec4/likec4/discussions' },
      { label: 'Discord Server', href: 'https://discord.gg/86ZSpjKAdA' },
      { label: 'Contributing', href: 'https://github.com/likec4/likec4/blob/main/CONTRIBUTING.md' },
      { label: 'Changelog', href: 'https://github.com/likec4/likec4/blob/main/CHANGELOG.md' },
    ],
  },
]

const socialLinks = [
  {
    label: 'GitHub',
    href: 'https://github.com/likec4/likec4',
    icon:
      '<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>',
  },
  {
    label: 'Twitter',
    href: '#',
    icon:
      '<path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/>',
  },
  {
    label: 'Discord',
    href: '#',
    icon: '<circle cx="12" cy="12" r="3"></circle><path d="M12 1v6m0 6v6m11-7h-6m-6 0H1"/>',
  },
]

const getSectionIcon = (iconName: string) => {
  const icons = {
    book:
      '<path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>',
    code: '<polyline points="16,18 22,12 16,6"></polyline><polyline points="8,6 2,12 8,18"></polyline>',
    users:
      '<path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path>',
  }
  return icons[iconName as keyof typeof icons] || icons.book
}
---

<footer id="community" class="bg-slate-900 dark:bg-slate-950 text-slate-300 py-16 px-6">
  <div class="max-w-7xl mx-auto">
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
      <div>
        <div class="flex items-center gap-3 mb-6">
          <Logo />
        </div>
        <p class="text-slate-400 leading-relaxed mb-6">
          Modern architecture modeling tool for software teams. Open source and built with developers in mind.
        </p>
      </div>

      {
        footerSections.map((section) => (
          <div>
            <h3 class="text-white font-semibold text-lg mb-2 flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <Fragment set:html={getSectionIcon(section.icon)} />
              </svg>
              {section.title}
            </h3>
            <ul class="space-y-1 list-none ml-0 pl-7">
              {
                section.links.map((link) => (
                  <li>
                    <a
                      href={link.href}
                      class="text-sm text-slate-600 dark:text-slate-300 hover:text-slate-900 dark:hover:text-white transition-colors no-underline hover:underline"
                    >
                      {link.label}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        ))
      }
    </div>

    <div class="pt-8 border-t border-slate-800">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-slate-400 text-sm">
          &copy; 2023-{currentYear} LikeC4. Released under the MIT License.
        </p>
        <!-- <div class="flex gap-6 text-sm">
          <a href="#" class="hover:text-white transition-colors">
            Privacy Policy
          </a>
          <a href="#" class="hover:text-white transition-colors">
            Terms of Service
          </a>
        </div> -->
      </div>
    </div>
  </div>
</footer>
