---
import { LikeC4View as C4View, type LikeC4ViewId } from './likec4-views'
interface Props {
  viewId: LikeC4ViewId;
}
const { viewId } = Astro.props
---

<C4View
  viewId={viewId}
  className="likec4-index-view"
  client:only="react"
  injectFontCss={false}
/>

<style>
  .likec4-index-view {
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
</style>
