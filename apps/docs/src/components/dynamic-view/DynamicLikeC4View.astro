---
import { LikeC4View, type LikeC4ViewId } from 'likec4:react/dynamic-view';
interface Props {
  viewId: LikeC4ViewId;
}
const { viewId } = Astro.props
---

<LikeC4View
  className="likec4-dynamic-view"
  viewId={viewId}
  browser={{
    enableFocusMode: false,
  }}
  client:only="react">
</LikeC4View>

<style>
  .likec4-dynamic-view {
    margin-top: 0;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }
</style>
