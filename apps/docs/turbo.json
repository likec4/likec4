{
  "$schema": "https://turbo.build/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "topo": {
      "dependsOn": [
        "^topo"
      ]
    },
    "generate": {
      "dependsOn": [
        "likec4#build"
      ],
      "outputs": [
        "src/components/*/likec4-views.*"
      ],
      "inputs": [
        "likec4/**"
      ],
      "outputLogs": "new-only"
    },
    "typecheck": {
      "dependsOn": [
        "generate",
        "topo"
      ],
      "outputLogs": "new-only"
    },
    "build": {
      "dependsOn": [
        "generate",
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".astro/**"
      ]
    }
  }
}
