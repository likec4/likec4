{
  "$schema": "https://turbo.build/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "generate": {
      "dependsOn": [
        "^generate",
        "likec4#build"
      ],
      "inputs": [
        "src/**/*.c4"
      ],
      "outputs": [
        "src/components/*/likec4-views.*"
      ]
    },
    "build": {
      "dependsOn": [
        "generate"
      ],
      "outputs": [
        ".astro/**",
        "dist/**"
      ]
    },
    // We override the default "test" task to exclude the "generate"
    "test": {
      "dependsOn": []
    }
  }
}
