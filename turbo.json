{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV"
  ],
  "globalDependencies": [
    ".tool-versions",
    "package.json",
    "pnpm-workspace.yaml",
    "pnpm-lock.yaml"
  ],
  "ui": "tui",
  "tasks": {
    "generate": {
      "dependsOn": [
        "^generate"
      ],
      "outputLogs": "new-only"
    },
    "typecheck": {
      "dependsOn": [
        "^typecheck",
        "generate"
      ],
      "outputs": [
        "lib/**",
        "*.tsbuildinfo"
      ],
      "outputLogs": "new-only"
    },
    "build": {
      "dependsOn": [
        "^generate",
        "generate"
      ],
      "outputs": [
        "dist/**"
      ],
      "outputLogs": "new-only"
    },
    "pack": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "*.tgz"
      ],
      "outputLogs": "new-only"
    },
    "lint:package": {
      "dependsOn": [
        "pack"
      ],
      "cache": false
    }
  }
}
