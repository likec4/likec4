{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "CLOUDFLARE_ENV"
  ],
  "globalDependencies": [
    ".tool-versions",
    "package.json",
    "pnpm-workspace.yaml",
    "pnpm-lock.yaml"
  ],
  "ui": "tui",
  "tasks": {
    "generate": {
      "dependsOn": [
        "^generate"
      ],
      "outputLogs": "new-only"
    },
    "sources": {
      "dependsOn": [
        "^sources"
      ]
    },
    "typecheck": {
      "dependsOn": [
        "^typecheck",
        "sources",
        "generate"
      ],
      "outputs": [
        "lib/**",
        "*.tsbuildinfo"
      ],
      "outputLogs": "new-only"
    },
    "build": {
      "dependsOn": [
        "^build",
        "sources",
        "generate"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!**/*.spec.ts",
        "!**/*.test-d.ts",
        "!**/__test*/**",
        "!**/__snapshots__/**",
        "!**/__fixtures__/**"
      ],
      "outputs": [
        "dist/**"
      ],
      "outputLogs": "new-only"
    },
    "pack": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "*.tgz"
      ],
      "outputLogs": "new-only"
    },
    "lint:package": {
      "dependsOn": [
        "pack"
      ],
      "cache": false,
      "outputLogs": "new-only"
    }
  }
}
